{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ESNext"],
    "resolveJsonModule": true,

    "isolatedModules": true,
    "importHelpers": true,

    "newLine": "lf",
    "noEmitHelpers": true,
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@structures/*": ["src/structures/*"],
      "@database/*": ["src/database/*"],
      "@utils/*": ["src/utils/*"],
      "@interfaces/*": ["src/interfaces/*"]
    }
  },
  "include": ["src", "locales"]
}
