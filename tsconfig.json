{
  "compilerOptions": {
    "target": "es2022",
    "module": "node20",
    "lib": ["ESNext"],
    "resolveJsonModule": true,

    "isolatedModules": true,
    "importHelpers": false,

    "newLine": "lf",
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "verbatimModuleSyntax": false,
    "noUnusedLocals": true,

    "moduleResolution": "nodenext",
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  }
}