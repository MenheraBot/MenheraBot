{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@structures/*": ["structures/*"],
      "@database/*": ["database/*"],
      "@utils/*": ["utils/*"],
      "@interfaces/*": ["interfaces/*"]
    },
  },
  "include": ["src"],
  "exclude": ["dist"]
}
